{# templates/security/login.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Connexion - ContactManager{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h1 class="h3 mb-0 text-center">
                        <i class="fas fa-sign-in-alt me-2"></i>Connexion
                    </h1>
                </div>
                <div class="card-body p-4">
                    <form method="post">
                        {% if error %}
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        {% endif %}

                        {% if app.user %}
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i>
                                Vous êtes déjà connecté en tant que <strong>{{ app.user.userIdentifier }}</strong>
                            </div>
                            <div class="text-center mb-4">
                                <a href="{{ path('app_dashboard') }}" class="btn btn-primary me-2">
                                    <i class="fas fa-tachometer-alt me-2"></i>Tableau de bord
                                </a>
                                <a href="{{ path('app_logout') }}" class="btn btn-outline-secondary">
                                    <i class="fas fa-sign-out-alt me-2"></i>Déconnexion
                                </a>
                            </div>
                        {% else %}
                            <div class="mb-4">
                                <label for="inputEmail" class="form-label fw-bold">
                                    <i class="fas fa-envelope me-1"></i>Adresse email
                                </label>
                                <input type="email" 
                                       value="{{ last_username }}" 
                                       name="email" 
                                       id="inputEmail" 
                                       class="form-control form-control-lg" 
                                       placeholder="votre@email.com"
                                       required 
                                       autofocus>
                                <div class="form-text">Veuillez entrer votre adresse email.</div>
                            </div>
                            
                            <div class="mb-4">
                                <label for="inputPassword" class="form-label fw-bold">
                                    <i class="fas fa-lock me-1"></i>Mot de passe
                                </label>
                                <input type="password" 
                                       name="password" 
                                       id="inputPassword" 
                                       class="form-control form-control-lg" 
                                       placeholder="Votre mot de passe"
                                       required>
                                <div class="form-text">Votre mot de passe est strictement confidentiel.</div>
                            </div>

                            <div class="mb-4 form-check">
                                <input type="checkbox" 
                                       class="form-check-input" 
                                       id="remember_me" 
                                       name="_remember_me">
                                <label class="form-check-label" for="remember_me">
                                    <i class="fas fa-clock me-1"></i>Se souvenir de moi
                                </label>
                            </div>

                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}">

                            <div class="d-grid gap-2 mb-4">
                                <button class="btn btn-primary btn-lg" type="submit">
                                    <i class="fas fa-sign-in-alt me-2"></i>Se connecter
                                </button>
                            </div>
                        {% endif %}
                    </form>
                    
                    {% if not app.user %}
                        <hr class="my-4">
                        
                        <div class="text-center">
                            <div class="mb-3">
                                <p class="text-muted mb-2">Pas encore de compte ?</p>
                                <a href="{{ path('app_register') }}" class="btn btn-outline-success w-100">
                                    <i class="fas fa-user-plus me-2"></i>Créer un compte
                                </a>
                            </div>
                            
                            {# SUPPRIMER LA SECTION PROBLEMATIQUE #}
                            {#
                            <div class="mb-3">
                                <p class="text-muted mb-2">Mot de passe oublié ?</p>
                                <a href="{{ path('app_forgot_password_request') }}" class="btn btn-outline-warning w-100">
                                    <i class="fas fa-key me-2"></i>Réinitialiser le mot de passe
                                </a>
                            </div>
                            #}
                        </div>
                    {% endif %}
                </div>
                
                <div class="card-footer text-center bg-light">
                    <small class="text-muted">
                        <i class="fas fa-shield-alt me-1"></i>
                        Vos données sont sécurisées avec ContactManager
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}