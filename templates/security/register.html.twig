{# templates/security/register.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Inscription - ContactManager{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-success text-white">
                    <h1 class="h3 mb-0 text-center">
                        <i class="fas fa-user-plus me-2"></i>Créer un compte
                    </h1>
                </div>
                <div class="card-body p-4">
                    {{ form_start(registrationForm) }}
                    
                    <div class="row mb-4">
                        <div class="col-md-6 mb-3">
                            <div class="form-floating">
                                {{ form_widget(registrationForm.prenom, {
                                    'attr': {
                                        'class': 'form-control',
                                        'placeholder': 'Votre prénom'
                                    }
                                }) }}
                                {{ form_label(registrationForm.prenom) }}
                                <div class="form-text">Votre prénom</div>
                            </div>
                            {{ form_errors(registrationForm.prenom) }}
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <div class="form-floating">
                                {{ form_widget(registrationForm.nom, {
                                    'attr': {
                                        'class': 'form-control',
                                        'placeholder': 'Votre nom'
                                    }
                                }) }}
                                {{ form_label(registrationForm.nom) }}
                                <div class="form-text">Votre nom de famille</div>
                            </div>
                            {{ form_errors(registrationForm.nom) }}
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        <div class="form-floating">
                            {{ form_widget(registrationForm.email, {
                                'attr': {
                                    'class': 'form-control',
                                    'placeholder': 'votre@email.com'
                                }
                            }) }}
                            {{ form_label(registrationForm.email) }}
                            <div class="form-text">Nous ne partagerons jamais votre email</div>
                        </div>
                        {{ form_errors(registrationForm.email) }}
                    </div>
                    
                    <div class="mb-4">
                        <div class="form-floating">
                            {{ form_widget(registrationForm.plainPassword, {
                                'attr': {
                                    'class': 'form-control',
                                    'placeholder': 'Votre mot de passe'
                                }
                            }) }}
                            {{ form_label(registrationForm.plainPassword) }}
                            <div class="form-text">Minimum 6 caractères</div>
                        </div>
                        {{ form_errors(registrationForm.plainPassword) }}
                    </div>
                    
                    <div class="mb-4">
                        <div class="form-check">
                            {{ form_widget(registrationForm.agreeTerms, {
                                'attr': {
                                    'class': 'form-check-input'
                                }
                            }) }}
                            {{ form_label(registrationForm.agreeTerms) }}
                            <div class="form-text">
                                Vous devez accepter nos 
                                <a href="#" data-bs-toggle="modal" data-bs-target="#termsModal">
                                    conditions d'utilisation
                                </a>
                            </div>
                        </div>
                        {{ form_errors(registrationForm.agreeTerms) }}
                    </div>

                    <div class="d-grid gap-2 mb-3">
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="fas fa-user-plus me-2"></i>S'inscrire
                        </button>
                    </div>
                    
                    {{ form_end(registrationForm) }}
                    
                    <hr class="my-4">
                    
                    <div class="text-center">
                        <p class="text-muted mb-2">Déjà un compte ?</p>
                        <a href="{{ path('app_login') }}" class="btn btn-outline-primary w-100">
                            <i class="fas fa-sign-in-alt me-2"></i>Se connecter
                        </a>
                    </div>
                </div>
                
                <div class="card-footer text-center bg-light">
                    <small class="text-muted">
                        <i class="fas fa-shield-alt me-1"></i>
                        Vos données sont sécurisées et cryptées
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal pour les conditions d'utilisation -->
<div class="modal fade" id="termsModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Conditions d'utilisation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <h6>1. Acceptation des conditions</h6>
                <p>En utilisant ContactManager, vous acceptez ces conditions d'utilisation.</p>
                
                <h6>2. Utilisation du service</h6>
                <p>ContactManager est un service de gestion de contacts personnel.</p>
                
                <h6>3. Confidentialité</h6>
                <p>Nous respectons votre vie privée et protégeons vos données.</p>
                
                <h6>4. Responsabilités</h6>
                <p>Vous êtes responsable de la confidentialité de votre mot de passe.</p>
                
                <h6>5. Modifications</h6>
                <p>Nous nous réservons le droit de modifier ces conditions.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</div>
{% endblock %}