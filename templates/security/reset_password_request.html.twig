{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-warning text-white">
                    <h1 class="h3 mb-0 text-center">
                        <i class="fas fa-key me-2"></i>Réinitialiser le mot de passe
                    </h1>
                </div>
                <div class="card-body p-4">
                    <p class="text-muted mb-4">
                        <i class="fas fa-info-circle me-2"></i>
                        Entrez votre adresse email. Vous recevrez un lien pour réinitialiser votre mot de passe.
                    </p>
                    
                    <form method="post">
                        <div class="mb-4">
                            <label for="inputEmail" class="form-label fw-bold">
                                <i class="fas fa-envelope me-1"></i>Adresse email
                            </label>
                            <input type="email" 
                                   name="email" 
                                   id="inputEmail" 
                                   class="form-control form-control-lg" 
                                   placeholder="votre@email.com"
                                   required 
                                   autofocus>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="fas fa-paper-plane me-2"></i>Envoyer le lien
                            </button>
                            <a href="{{ path('app_login') }}" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Retour à la connexion
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}