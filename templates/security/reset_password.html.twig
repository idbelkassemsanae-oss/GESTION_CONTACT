{% extends 'base.html.twig' %}

{% block title %}Nouveau mot de passe{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-info text-white">
                    <h1 class="h3 mb-0 text-center">
                        <i class="fas fa-lock me-2"></i>Nouveau mot de passe
                    </h1>
                </div>
                <div class="card-body p-4">
                    <form method="post">
                        <div class="mb-4">
                            <label for="inputPassword" class="form-label fw-bold">
                                <i class="fas fa-lock me-1"></i>Nouveau mot de passe
                            </label>
                            <input type="password" 
                                   name="password" 
                                   id="inputPassword" 
                                   class="form-control form-control-lg" 
                                   placeholder="Votre nouveau mot de passe"
                                   required 
                                   autofocus>
                        </div>
                        
                        <div class="mb-4">
                            <label for="inputPasswordConfirm" class="form-label fw-bold">
                                <i class="fas fa-lock me-1"></i>Confirmer le mot de passe
                            </label>
                            <input type="password" 
                                   name="password_confirm" 
                                   id="inputPasswordConfirm" 
                                   class="form-control form-control-lg" 
                                   placeholder="Confirmer votre mot de passe"
                                   required>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-info btn-lg">
                                <i class="fas fa-save me-2"></i>Enregistrer le nouveau mot de passe
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}