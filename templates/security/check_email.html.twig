{% extends 'base.html.twig' %}

{% block title %}Email envoyé{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-success text-white">
                    <h1 class="h3 mb-0 text-center">
                        <i class="fas fa-check-circle me-2"></i>Email envoyé
                    </h1>
                </div>
                <div class="card-body p-4 text-center">
                    <div class="mb-4">
                        <i class="fas fa-envelope-open-text fa-4x text-success mb-3"></i>
                        <h4>Vérifiez votre boîte mail</h4>
                        <p class="text-muted">
                            Si un compte correspond à votre adresse email, vous recevrez un lien pour réinitialiser votre mot de passe.
                        </p>
                    </div>
                    
                    <div class="d-grid gap-2">
                        <a href="{{ path('app_login') }}" class="btn btn-primary">
                            <i class="fas fa-sign-in-alt me-2"></i>Retour à la connexion
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}