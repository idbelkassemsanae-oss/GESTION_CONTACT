{# templates/home/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Accueil - ContactManager{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h1 class="display-4 mb-0">
                        <i class="fas fa-address-book me-3"></i>ContactManager
                    </h1>
                    <p class="lead mb-0 mt-2">Gestion de contacts professionnelle</p>
                </div>
                <div class="card-body p-5">
                    <div class="mb-5">
                        <i class="fas fa-users fa-5x text-primary mb-4"></i>
                        <h2 class="mb-4">Bienvenue sur ContactManager</h2>
                        <p class="lead text-muted mb-4">
                            Gérez facilement tous vos contacts professionnels<br>
                            en un seul endroit sécurisé.
                        </p>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="card h-100 border-primary">
                                <div class="card-body">
                                    <i class="fas fa-sign-in-alt fa-3x text-primary mb-3"></i>
                                    <h4 class="card-title">Déjà inscrit ?</h4>
                                    <p class="card-text">Connectez-vous pour accéder à votre espace personnel.</p>
                                    <a href="{{ path('app_login') }}" class="btn btn-primary btn-lg w-100">
                                        <i class="fas fa-sign-in-alt me-2"></i>Se connecter
                                    </a>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <div class="card h-100 border-success">
                                <div class="card-body">
                                    <i class="fas fa-user-plus fa-3x text-success mb-3"></i>
                                    <h4 class="card-title">Nouveau ?</h4>
                                    <p class="card-text">Créez un compte gratuit pour commencer à gérer vos contacts.</p>
                                    <a href="{{ path('app_register') }}" class="btn btn-success btn-lg w-100">
                                        <i class="fas fa-user-plus me-2"></i>S'inscrire gratuitement
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <hr class="my-5">
                    
                    <div class="row text-center">
                        <div class="col-md-4 mb-3">
                            <i class="fas fa-shield-alt fa-2x text-info mb-2"></i>
                            <h5>Sécurisé</h5>
                            <p class="text-muted">Vos données sont cryptées et protégées</p>
                        </div>
                        <div class="col-md-4 mb-3">
                            <i class="fas fa-mobile-alt fa-2x text-info mb-2"></i>
                            <h5>Responsive</h5>
                            <p class="text-muted">Accessible sur tous vos appareils</p>
                        </div>
                        <div class="col-md-4 mb-3">
                            <i class="fas fa-cloud fa-2x text-info mb-2"></i>
                            <h5>Cloud</h5>
                            <p class="text-muted">Accessible partout, tout le temps</p>
                        </div>
                    </div>
                </div>
                
                <div class="card-footer text-center bg-light">
                    <small class="text-muted">
                        <i class="fas fa-copyright me-1"></i>
                        ContactManager {{ "now"|date("Y") }} - Tous droits réservés
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}