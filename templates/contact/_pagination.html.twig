{% macro pagination(paginator, route, queryParams = {}) %}
    {% if paginator.haveToPaginate %}
        <nav aria-label="Pagination" class="mt-4">
            <ul class="pagination justify-content-center">
                {% if paginator.hasPreviousPage %}
                    <li class="page-item">
                        <a class="page-link" 
                           href="{{ path(route, queryParams|merge({'page': paginator.previousPage})) }}"
                           aria-label="Précédent">
                            <i class="fas fa-chevron-left"></i>
                        </a>
                    </li>
                {% else %}
                    <li class="page-item disabled">
                        <span class="page-link">
                            <i class="fas fa-chevron-left"></i>
                        </span>
                    </li>
                {% endif %}

                {% for page in 1..paginator.nbPages %}
                    {% if page == paginator.currentPage %}
                        <li class="page-item active">
                            <span class="page-link">{{ page }}</span>
                        </li>
                    {% else %}
                        {% if (page >= paginator.currentPage-2 and page <= paginator.currentPage+2) or page == 1 or page == paginator.nbPages %}
                            <li class="page-item">
                                <a class="page-link" 
                                   href="{{ path(route, queryParams|merge({'page': page})) }}">
                                    {{ page }}
                                </a>
                            </li>
                        {% elseif (page == paginator.currentPage-3 or page == paginator.currentPage+3) and paginator.nbPages > 7 %}
                            <li class="page-item disabled">
                                <span class="page-link">...</span>
                            </li>
                        {% endif %}
                    {% endif %}
                {% endfor %}

                {% if paginator.hasNextPage %}
                    <li class="page-item">
                        <a class="page-link" 
                           href="{{ path(route, queryParams|merge({'page': paginator.nextPage})) }}"
                           aria-label="Suivant">
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    </li>
                {% else %}
                    <li class="page-item disabled">
                        <span class="page-link">
                            <i class="fas fa-chevron-right"></i>
                        </span>
                    </li>
                {% endif %}
            </ul>
        </nav>

        <!-- Pagination Info -->
        <div class="text-center text-muted mt-2">
            <small>
                Page {{ paginator.currentPage }} sur {{ paginator.nbPages }} - 
                Affichage de {{ paginator.currentPageOffsetStart }} à 
                {{ paginator.currentPageOffsetEnd }} 
                sur {{ paginator.nbResults }} contacts
            </small>
        </div>
    {% endif %}
{% endmacro %}