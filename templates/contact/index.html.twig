{% extends 'base.html.twig' %}

{% block title %}Liste des Contacts{% endblock %}

{% block body %}
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4 mt-3">
        <div>
            <h1 class="h3 mb-1">
                <i class="fas fa-users text-primary me-2"></i> Gestion des Contacts
            </h1>
            <p class="text-muted mb-0">Liste complète de tous vos contacts</p>
        </div>
        <div>
            <a href="{{ path('app_contact_new') }}" class="btn btn-primary">
                <i class="fas fa-user-plus me-2"></i> Nouveau Contact
            </a>
        </div>
    </div>

    <!-- Search & Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <form action="{{ path('app_contact_index') }}" method="get" class="row g-2">
                        <div class="col-md-8">
                            <div class="input-group">
                                <input type="text" name="search" class="form-control" 
                                       placeholder="Rechercher par nom, prénom, email ou téléphone..." 
                                       value="{{ search }}">
                                <button class="btn btn-primary" type="submit">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <select class="form-select" name="sort" onchange="this.form.submit()">
                                <option value="nom" {% if app.request.get('sort') == 'nom' %}selected{% endif %}>Trier par nom</option>
                                <option value="date" {% if app.request.get('sort') == 'date' %}selected{% endif %}>Trier par date</option>
                                <option value="prenom" {% if app.request.get('sort') == 'prenom' %}selected{% endif %}>Trier par prénom</option>
                            </select>
                        </div>
                    </form>
                </div>
                <div class="col-md-4 text-md-end mt-2 mt-md-0">
                    <span class="badge bg-primary p-2">
                        <i class="fas fa-user me-1"></i> {{ totalContacts }} contact(s)
                    </span>
                    {% if search %}
                        <a href="{{ path('app_contact_index') }}" class="btn btn-sm btn-outline-secondary ms-2">
                            <i class="fas fa-times me-1"></i> Effacer
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <!-- Search Results Info -->
    {% if search %}
        <div class="alert alert-info d-flex justify-content-between align-items-center mb-4">
            <div>
                <i class="fas fa-search me-2"></i>
                Résultats pour : <strong>"{{ search }}"</strong>
                <span class="badge bg-primary ms-2">{{ totalContacts }} résultat(s)</span>
            </div>
            <a href="{{ path('app_contact_index') }}" class="btn btn-sm btn-outline-info">
                <i class="fas fa-redo me-1"></i> Tout afficher
            </a>
        </div>
    {% endif %}

    <!-- Contacts Table -->
    <div class="card">
        <div class="card-body">
            {% if totalContacts > 0 %}
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 80px;">Photo</th>
                                <th>Nom & Prénom</th>
                                <th>Coordonnées</th>
                                <th>Date</th>
                                <th class="text-end" style="width: 150px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for contact in contacts %}
                                <tr class="contact-row">
                                    <td>
                                        <img src="{{ contact.image ? '/uploads/contacts/' ~ contact.image : 'https://ui-avatars.com/api/?name=' ~ contact.prenom ~ '+' ~ contact.nom ~ '&background=random&color=fff&size=100' }}" 
                                             alt="{{ contact.nomComplet }}" 
                                             class="contact-photo">
                                    </td>
                                    <td>
                                        <div class="fw-bold">{{ contact.prenom }} {{ contact.nom }}</div>
                                        <small class="text-muted">ID: #{{ contact.id }}</small>
                                    </td>
                                    <td>
                                        <div class="mb-1">
                                            <i class="fas fa-envelope text-primary me-1"></i>
                                            <a href="mailto:{{ contact.email }}" class="text-decoration-none">
                                                {{ contact.email }}
                                            </a>
                                        </div>
                                        <div>
                                            <i class="fas fa-phone text-success me-1"></i>
                                            {% if contact.telephone %}
                                                <a href="tel:{{ contact.telephone }}" class="text-decoration-none">
                                                    {{ contact.telephone }}
                                                </a>
                                            {% else %}
                                                <span class="text-muted">Non renseigné</span>
                                            {% endif %}
                                        </div>
                                    </td>
                                    <td>
                                        <div class="text-muted">
                                            <small>
                                                <i class="fas fa-calendar me-1"></i>
                                                {{ contact.dateCreation|date('d/m/Y') }}
                                            </small>
                                        </div>
                                        {% if contact.dateModification %}
                                            <div class="text-muted">
                                                <small>
                                                    <i class="fas fa-edit me-1"></i>
                                                    Modifié: {{ contact.dateModification|date('d/m/Y') }}
                                                </small>
                                            </div>
                                        {% endif %}
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group btn-group-sm  " role="group">
                                            <a href="{{ path('app_contact_show', {'id': contact.id}) }}" 
                                               class="btn btn-outline-info" 
                                               title="Voir détails"
                                               data-bs-toggle="tooltip">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="{{ path('app_contact_edit', {'id': contact.id}) }}" 
                                               class="btn btn-outline-warning" 
                                               title="Modifier"
                                               data-bs-toggle="tooltip">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form method="post" action="{{ path('app_contact_delete', {'id': contact.id}) }}" 
                                                  class="d-inline"
                                                  onsubmit="return confirmDelete('{{ contact.prenom }} {{ contact.nom }}')">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ contact.id) }}">
                                                <button type="submit" class="btn btn-outline-danger" title="Supprimer">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                {% if totalPages > 1 %}
                    <nav aria-label="Pagination" class="mt-4">
                        <ul class="pagination justify-content-center">
                            <!-- Previous -->
                            <li class="page-item {% if page == 1 %}disabled{% endif %}">
                                <a class="page-link" 
                                   href="?page={{ page-1 }}{% if search %}&search={{ search }}{% endif %}"
                                   aria-label="Précédent">
                                    <i class="fas fa-chevron-left"></i>
                                </a>
                            </li>

                            <!-- Page numbers -->
                            {% for p in 1..totalPages %}
                                {% if p == page %}
                                    <li class="page-item active">
                                        <span class="page-link">{{ p }}</span>
                                    </li>
                                {% else %}
                                    {% if (p >= page-2 and p <= page+2) or p == 1 or p == totalPages %}
                                        <li class="page-item">
                                            <a class="page-link" 
                                               href="?page={{ p }}{% if search %}&search={{ search }}{% endif %}">
                                                {{ p }}
                                            </a>
                                        </li>
                                    {% elseif (p == page-3 or p == page+3) and totalPages > 7 %}
                                        <li class="page-item disabled">
                                            <span class="page-link">...</span>
                                        </li>
                                    {% endif %}
                                {% endif %}
                            {% endfor %}

                            <!-- Next -->
                            <li class="page-item {% if page == totalPages %}disabled{% endif %}">
                                <a class="page-link" 
                                   href="?page={{ page+1 }}{% if search %}&search={{ search }}{% endif %}"
                                   aria-label="Suivant">
                                    <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>

                    <!-- Pagination Info -->
                    <div class="text-center text-muted mt-2">
                        <small>
                            Page {{ page }} sur {{ totalPages }} - 
                            Affichage de {{ (page-1)*contactsPerPage + 1 }} à 
                            {{ min(page*contactsPerPage, totalContacts) }} 
                            sur {{ totalContacts }} contacts
                        </small>
                    </div>
                {% endif %}
            {% else %}
                <!-- No Contacts -->
                <div class="text-center py-5">
                    <div class="mb-4">
                        <i class="fas fa-users fa-4x text-muted opacity-50"></i>
                    </div>
                    <h4 class="text-muted mb-3">
                        {% if search %}
                            Aucun résultat trouvé
                        {% else %}
                            Aucun contact enregistré
                        {% endif %}
                    </h4>
                    <p class="text-muted mb-4">
                        {% if search %}
                            Aucun contact ne correspond à votre recherche "{{ search }}".<br>
                            Essayez avec d'autres termes.
                        {% else %}
                            Commencez par ajouter votre premier contact.
                        {% endif %}
                    </p>
                    <div class="d-flex justify-content-center gap-3">
                        <a href="{{ path('app_contact_new') }}" class="btn btn-primary">
                            <i class="fas fa-user-plus me-2"></i> Ajouter un contact
                        </a>
                        {% if search %}
                            <a href="{{ path('app_contact_index') }}" class="btn btn-outline-secondary">
                                <i class="fas fa-redo me-2"></i> Voir tous les contacts
                            </a>
                        {% endif %}
                    </div>
                </div>
            {% endif %}
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mt-4">
        <div class="col-md-4 mb-3">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-user-plus fa-2x text-primary mb-3"></i>
                    <h5>Ajout rapide</h5>
                    <p class="text-muted small">Ajoutez un nouveau contact en quelques clics</p>
                    <a href="{{ path('app_contact_new') }}" class="btn btn-outline-primary btn-sm">
                        <i class="fas fa-plus me-1"></i> Nouveau contact
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-search fa-2x text-success mb-3"></i>
                    <h5>Recherche avancée</h5>
                    <p class="text-muted small">Trouvez rapidement vos contacts</p>
                    <button class="btn btn-outline-success btn-sm" data-bs-toggle="modal" data-bs-target="#searchModal">
                        <i class="fas fa-search me-1"></i> Rechercher
                    </button>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-chart-bar fa-2x text-info mb-3"></i>
                    <h5>Statistiques</h5>
                    <p class="text-muted small">Consultez vos statistiques</p>
                    <a href="{{ path('app_dashboard') }}" class="btn btn-outline-info btn-sm">
                        <i class="fas fa-chart-line me-1"></i> Voir stats
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        function confirmDelete(contactName) {
            return confirm(`Êtes-vous sûr de vouloir supprimer le contact "${contactName}" ?\n\nCette action est irréversible et supprimera également la photo associée.`);
        }
        
        // Initialiser les tooltips
        document.addEventListener('DOMContentLoaded', function() {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
            
            // Animation des lignes
            const rows = document.querySelectorAll('.contact-row');
            rows.forEach((row, index) => {
                row.style.opacity = '0';
                row.style.transform = 'translateY(20px)';
                
                setTimeout(() => {
                    row.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
                    row.style.opacity = '1';
                    row.style.transform = 'translateY(0)';
                }, index * 50);
            });
        });
    </script>
{% endblock %}